{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2015",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noEmit": true,
    "lib": [
      "ESNext",
    ],
  },
  "include": [
    "src/**/*",
    "test",
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}